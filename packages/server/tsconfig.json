{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    // "module": "commonjs",
    // "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./build",
    // "skipLibCheck": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ]
}